<!doctype html>
<html>
<head>
    <title>Log In</title>

    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="./lib/flat-ui/dist/css/flat-ui.min.css">
    <link rel="icon" href="favicon.png" type="image/png"/>
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Login</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post" class="form-horizontal" role="form">
      <div class="form-group">
        <label class="control-label col-sm-2" for="email"><b>Email:</b></label>
        <div class="col-sm-10">
          <input type="email" class="form-control" name="email" id="email" placeholder="Enter email" autofocus>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="pwd"><b>Password:</b></label>
        <div class="col-sm-10"> 
          <input type="password" class="form-control" name="password" id="pwd" placeholder="Enter password"
          >
        </div>
      </div>      
      <div class="form-group"> 
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </div>
    </form>

    <hr>

    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>

    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>

</body>
</html>